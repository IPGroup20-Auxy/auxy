<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:paddingVertical="30dp"
    android:paddingHorizontal="50dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/close_button"
                android:src="@drawable/ic_baseline_close_24"
                android:layout_alignEnd="@id/add_contact_header"
                android:layout_marginEnd="-10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Contact"
                android:id="@+id/add_contact_header"
                android:layout_below="@id/close_button"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/first_name_header"
                android:text="First Name *:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/add_contact_header"
                android:layout_marginVertical="10dp"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/first_name_edit_box"
                android:layout_below="@id/first_name_header"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/last_name_header"
                android:text="Last Name *:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/first_name_edit_box"
                android:layout_marginVertical="10dp"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/last_name_edit_box"
                android:layout_below="@id/last_name_header"
                android:inputType="text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_header"
                android:text="Number *:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/last_name_edit_box"
                android:layout_marginVertical="10dp"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/number_edit_box"
                android:layout_below="@id/number_header"
                android:inputType="phone"/>

            <View
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:id="@+id/hr"
                android:background="#000000"
                android:layout_below="@id/number_edit_box"
                android:layout_centerInParent="true"
                android:layout_marginVertical="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nickname_header"
                android:text="Nickname:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/hr"
                android:layout_marginVertical="10dp"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/nickname_edit_box"
                android:layout_below="@id/nickname_header"
                android:inputType="text"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/only_first_name_header"
                android:text="Display First Name instead of Full Name:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/nickname_edit_box"
                android:layout_marginVertical="10dp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox"
                android:layout_below="@id/only_first_name_header"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/submit_button"
                android:layout_below="@id/checkbox"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:text="Submit"
                android:textColor="@color/black"
                android:backgroundTint="@color/common_google_signin_btn_tint"/>
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>